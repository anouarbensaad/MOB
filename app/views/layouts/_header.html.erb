                <li><%= link_to raw("<span class=\"glyphicon glyphicon-cog\"></span> Gestion des utilisateurs"), users_path %></li>
              <% end %> 
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
